<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginLeft="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/lesson_style"
    android:elevation="2dp">
    <RelativeLayout
        android:layout_width="70dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:background="@drawable/lesson_left_style">

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/start_time_of_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Текст"
                android:textColor="@color/secondary_text_color"
                android:textSize="15sp" >
            </TextView>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lesson_partition">
            </TextView>
            <TextView
                android:id="@+id/finish_time_of_lesson"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Текст"
                android:textColor="@color/secondary_text_color"
                android:textSize="15sp" >
            </TextView>
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/lesson_partition">
    </TextView>

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/lesson_background">
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/name_of_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="@color/firstly_text_color"
            android:transitionName="sharedItemView"
            tools:text="Ещё текст" />
        <TextView
            android:id="@+id/number_of_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_of_lesson"
            android:alpha="0.8"
            android:textSize="12sp"
            android:text="каб. 122"
            android:layout_centerHorizontal="true" >
        </TextView>
    </RelativeLayout>

    <TextView
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/lesson_partition">
    </TextView>

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@drawable/lesson_right_style" >
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/grade"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text_color"
            tools:text="Ещё текст" />
    </RelativeLayout>
</LinearLayout>